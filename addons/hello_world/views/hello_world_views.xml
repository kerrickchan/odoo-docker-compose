<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hello_world_view_form" model="ir.ui.view">
        <field name="name">hello.world.form</field>
        <field name="model">hello.world</field>
        <field name="arch" type="xml">
            <form string="Hello World">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="message"/>
                        <field name="is_published"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hello_world_view_list" model="ir.ui.view">
        <field name="name">hello.world.list</field>
        <field name="model">hello.world</field>
        <field name="arch" type="xml">
            <list string="Hello World">
                <field name="name"/>
                <field name="message"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>

    <record id="hello_world_action" model="ir.actions.act_window">
        <field name="name">Hello World</field>
        <field name="res_model">hello.world</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="hello_world_menu_root"
              name="Hello World"
              action="hello_world_action"
              sequence="10"/>
</odoo>
